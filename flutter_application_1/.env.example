# Etoile Mobile App - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE
# =============================================================================
# Get these from your Supabase project settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# CLOUDFLARE R2 (for video storage)
# =============================================================================
# Account ID: visible in your Cloudflare dashboard URL
R2_ACCOUNT_ID=your-account-id
# Access Key ID: from R2 API Token creation
R2_ACCESS_KEY_ID=your-access-key-id
# Secret Access Key: from R2 API Token creation (keep secret!)
R2_SECRET_ACCESS_KEY=your-secret-access-key
# Bucket names
R2_BUCKET_VIDEOS=etoile-videos
R2_BUCKET_THUMBNAILS=etoile-thumbnails

# =============================================================================
# STRIPE (for payments)
# =============================================================================
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_MERCHANT_ID=merchant.com.etoile.app

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Options: development, staging, production
ENVIRONMENT=development
DEBUG_MODE=true
